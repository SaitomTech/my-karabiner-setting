{
    "title": "Using Japanese_Eisuu Shortcut",
    "rules": [
        {
        "description": "Japanese_Eisuu + hjkl to arrow keys",
        "manipulators": [
            {
            "from": {
                "key_code": "h",
                "modifiers": {"mandatory": ["japanese_eisuu"], "optional": ["any"]}
            },
            "to": [{"key_code": "left_arrow"}],
            "type": "basic"
            },
            {
            "from": {
                "key_code": "j",
                "modifiers": {
                "mandatory": [
                    "japanese_eisuu"
                ],
                "optional": [
                    "any"
                ]
                }
            },
            "to": [
                {
                "key_code": "down_arrow"
                }
            ],
            "type": "basic"
            },
            {
            "from": {
                "key_code": "k",
                "modifiers": {
                "mandatory": [
                    "japanese_eisuu"
                ],
                "optional": [
                    "any"
                ]
                }
            },
            "to": [
                {
                "key_code": "up_arrow"
                }
            ],
            "type": "basic"
            },
            {
            "from": {
                "key_code": "l",
                "modifiers": {
                "mandatory": [
                    "japanese_eisuu"
                ],
                "optional": [
                    "any"
                ]
                }
            },
            "to": [
                {
                "key_code": "right_arrow"
                }
            ],
            "type": "basic"
            }
        ]
        }
    ]
}
